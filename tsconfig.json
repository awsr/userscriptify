{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": false,
        "outDir": "./dist/",
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}